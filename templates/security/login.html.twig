{% extends 'ListTravels/base.html.twig' %}

{% block title %}Log in!{% endblock %}
{% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
{% block body %}
<div class="cont">
<form method="post" class="cont--Form" >
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Has iniciado sesi칩n con el usuario {{ app.user.username }}, <a href="{{ path('app_logout') }}">Cerrar sesi칩n</a>
        </div>
    {% endif %}

    <h1 class="">Iniciar sesi칩n</h1>
    <label for="inputUsername">Usuario</label>
    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="" autocomplete="username" required autofocus>
    <label for="inputPassword">Contrase침a</label>
    <input type="password" name="password" id="inputPassword" class="" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary" type="submit">
        Entrar
    </button>
</form>
</div>
{% endblock %}
